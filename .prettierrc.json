{
    "parser": "typescript",
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always",
    "useTabs": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 4,
          "useTabs": true,
          "printWidth": 80,
          "singleQuote": true,
          "trailingComma": "all",
          "bracketSpacing": true,
          "semi": true,
          "arrowParens": "always"
        }
      }
    ]
    
  }
